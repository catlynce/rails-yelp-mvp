<div class="col-sm-12">
    <p class="h3">Add review to <%= @restaurant.name %></p>
    <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, as: :text %>
        <%= f.input :rating, collection: [0,1,2,3,4,5] %>
        <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
</div>