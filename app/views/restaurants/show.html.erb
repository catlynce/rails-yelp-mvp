<div class="col-sm-8">
    <h1><%= @restaurant.name %></h1>
    <p>
        <label>Address:</label>
        <address>
            <%= @restaurant.address %>
        </address>
    </p>
    <p>
        <label>Phone Number:</label>
        <%= @restaurant.phone_number %>
    </p>
    <p>
        <label>Category: </label>
        <%= @restaurant.category %>
    </p>
    <div class="row">
        <div class="col-sm-12 mt-2">
            <%= link_to "Edit", edit_restaurant_path(@restaurant), class: 'btn btn-secondary' %>
            <%= link_to "Delete", restaurant_path(@restaurant), method: :delete, class: 'btn btn-danger' %>
        </div>
    </div>
</div>


<div class="col-sm-4">
    <div class="card">
        <div class="card-header">Add review</div>
        <div class="card-body">
            <%= simple_form_for [@restaurant, @review] do |f| %>
                <%= f.input :content, as: :text %>
                <%= f.input :rating, collection: [0,1,2,3,4,5] %>
                <%= f.button :submit, class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>
</div>

<% if @restaurant.reviews.size > 0 %>
<div class="col-sm-12 mt-4">
    <p class="h4">Reviews</p>
    <ul class="list-group flex-fill">
        <% @restaurant.reviews.each do |review| %>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <%= review.content %>
                <span class="badge badge-primary badge-pill">
                    <%= review.rating %>
                </span>
            </li>
        <% end %>
    </ul>
    <!--
    <div class="mt-2">
        <%= link_to "Add review", new_restaurant_review_path(@restaurant), class: 'btn btn-outline-primary' %>
    </div>
    -->
</div>
<% end %>